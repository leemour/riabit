= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :seo_title
    = f.text_field :seo_title
  .field
    = f.label :seo_desc
    = f.text_field :seo_desc
  .field
    = f.label :seo_keys
    = f.text_field :seo_keys
  .actions
    = f.submit 'Save'
